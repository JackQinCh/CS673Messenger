<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/fbPassword"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:autoText="true"
        android:contextClickable="false"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fbUsername"
        android:layout_above="@+id/fbPassword"
        android:layout_alignStart="@+id/fbPassword"
        android:layout_alignEnd="@+id/fbPassword"
        android:hint="Username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_signin"
        android:id="@+id/loginButton"
        android:layout_below="@+id/fbPassword"
        android:layout_alignEnd="@+id/fbPassword"
        android:layout_alignStart="@+id/fbPassword"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:onClick="login" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
