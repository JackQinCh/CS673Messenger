<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/groupNameLabel"
        android:text="Team1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/groupPhoto"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/groupPhoto"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/group" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/groupMembersLabel" android:layout_marginLeft="10dp"
        android:text="You and ...."
        android:layout_below="@+id/groupNameLabel"
        android:layout_alignStart="@+id/groupNameLabel" />
</RelativeLayout>